    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug.ts",
            "request": "launch",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}\\debug.ts",
            "runtimeExecutable": "C:\\Users\\claus\\.deno\\bin\\deno.exe",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk=127.0.0.1:9300",
                "--allow-all"
            ],
            "attachSimplePort": 9300,
            "outputCapture": "std"
        },


        {
            "request": "launch",
            "name": "Deno RUN",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "C:\\Users\\claus\\.deno\\bin\\deno.exe",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk=127.0.0.1:9300",
                "--allow-all",
                "${file}"
            ],
            "attachSimplePort": 9300,
            "outputCapture": "std"
        },
        {
            "name": "Deno TEST <file>",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "C:\\Users\\claus\\.deno\\bin\\deno.exe",
            "runtimeArgs": [
                "test", 
                "--inspect-brk=127.0.0.1:9300",  
                "-A", 
                "${file}"
            ],
            "attachSimplePort": 9300,
            "outputCapture": "std"
        },

    ],
}
